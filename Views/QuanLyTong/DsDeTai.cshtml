    $(document).on("click", "button[name='delete']", function () {
        let idhuy =  $(this).closest('tr').attr('id');
        $('#ModalTitleDeTai').text("Hủy Đề Tài");
        $('#textbody').show();
        $('#btn-HuyPCDT').show();
