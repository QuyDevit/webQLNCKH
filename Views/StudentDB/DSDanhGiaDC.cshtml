                        s += '<ul style="list-style-type:none">';
                        s += '<li>Tên Giảng Viên:<span>' + v.TenGV + ' </span></li>';
                        s += '<li>Đánh giá:<span> ' + v.DanhGia + '</span></li>';
                        s += '<li>Điểm:<span id=' + id + '_' + i + ' >' + v.Diem + '</span></li></ul></div>';
                        $('#S_' + id + '').append(s);
                        return;
                    })
                    
                        let D1 = $('#' + id + '_' + 1 + '').text();
                        let D2 = $('#' + id + '_' + 2 + '').text();
                        let D3 = $('#' + id + '_' + 3 + '').text();
                        $('#DiemTB').text((parseFloat(D1) + parseFloat(D2) + parseFloat(D3)) / 3)
                        $('#ShowDiem_' + id + '').toggle()
                }
                if (k == 2) { location.reload() }
            }
            });*@    
            setTimeout(function () {
                $('#ShowDiem_' + id + '').toggle()
            },200)
            
        })
       
    })
</script>