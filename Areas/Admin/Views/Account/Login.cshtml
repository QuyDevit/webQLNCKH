
@{
    ViewBag.Title = "Login";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutLoginAdmin.cshtml";
}
<link href="~/Theme/css/loginAdmin/style.css" rel="stylesheet" />
<script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
<script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>

<div class="blob"></div>
<div class="wrapped">
    <form action="~/Admin/Account/Login" method="post">
        <h2>Đăng Nhập</h2>
        <div class="input-box">
            <span class="icon"><ion-icon name="mail"></ion-icon></span>
            <input name="username" type="text" required>
            <label for="">Tài Khoản</label>
        </div>
        <div class="input-box">
            <span class="icon"><ion-icon name="lock-closed"></ion-icon></span>
            <input name="password" type="password" required>
            <label>Mật Khẩu</label>
        </div>

        <div class="remember-forgot">
            <label><input type="checkbox">Ghi nhớ</label>
            <a href="#">Quên Mật Khẩu</a>
        </div>
        <p style="color:red">@ViewBag.ThongBao</p>
        <button type="submit">Đăng Nhập</button>
        <div class="register-link">
            <p>Chưa có tài khoản? <a href="#">Đăng Ký</a></p>
        </div>
    </form>
</div>


